{
    "compilerOptions": {
      "target": "ES6",                                 
      "module": "ES6",                                
      "lib": ["ES6"],                                  
      "allowJs": true,                                
      "checkJs": false,                               
      "outDir": "./dist",                             
      "rootDir": "./src",                             
      "strict": true,                                 
      "moduleResolution": "node",
      "esModuleInterop": true,                     
      "skipLibCheck": true,                           
      "forceConsistentCasingInFileNames": true        
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
  }
  